@model IEnumerable<MovieLibrary.Models.Movie> 

<h2>Seznam filmů</h2>

<table class="table">
	<thead>
		<tr>
			<th>Název</th>
			<th>Popis</th>
			<th>Rok</th>
			<th>Režisér</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var movie in Model)
		{
			<tr>
				<td>@movie.Title</td>
				<td>@movie.Year</td>
				<td>@movie.Description</td>
				<td>@movie.Director</td>
			</tr>
		}
	</tbody>
</table>