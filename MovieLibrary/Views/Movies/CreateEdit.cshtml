@model MovieLibrary.Models.Movie

<h2>@(Model.Id == 0 ? "Přidat nový film" : "Upravit film")</h2>

<form asp-action="CreateEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <!-- Tmdb Searchbar -->
    <input type="text" id="tmdb-search" placeholder="Hledat film..." class="form-control" />
    <div id="tmdb-results" class="dropdown-menu" style="display: none; max-height: 300px; overflow: auto;"></div>

    <!-- Title input -->
    <div class="form-group">
        <label asp-for="Title" class="control-label">Název</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description input -->
    <div class="form-group">
        <label asp-for="Description" class="control-label">Popis</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Bez popisu"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Release year input -->
    <div class="form-group">
        <label asp-for="Year" class="control-label">Rok vydání</label>
        <input asp-for="Year" list="rokList" type="number" class="form-control" min="1900" max=DateTime.Now.Year placeholder=@DateTime.Now.Year />
        <datalist id="rokList">
            @for (int year = DateTime.Now.Year; year >= 1900; year--)
            {
                <option value="@year" selected="@(Model.Year == year ? "selected" : null)">@year</option>
            }
        </datalist>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director input -->
    <div class="form-group">
        <label asp-for="Director" class="control-label">Režisér</label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Poster input -->
    <div class="form-group">
        <label asp-for="PosterUrl" class="control-label">Plakat</label>
        <input asp-for="PosterUrl" class="form-control" type="url"/>
        <span asp-validation-for="PosterUrl" class="text-danger"></span>
    </div>

    <!-- Save/exit buttons -->
    <div class="form-group">
        <button type="submit" class="btn btn-success">Uložit</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Zrušit</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $("#tmdb-search").on("input",function () {
                const query = $(this).val();

                if (query.length < 2) {
                    $("#tmdb-results").hide();
                    return;
                }

                $.get("/Movies/TmdbSearch",{ term: query }, function (data) {
                    const results = $("#tmdb-results");
                    results.empty();

                    if (data.length === 0) {
                        results.hide();
                        return;
                    }

                    data.forEach(movie => {
                        const item = $(`
                            <div class="dropdown-item d-flex align-items-center" style="cursor:pointer;">
                                <img src="${movie.poster || ''}" alt="" style="width:60px; height:auto; margin-right:10px;" />
                                <div>
                                    <div><strong>${movie.title}</strong> (${movie.year || 'N/A'})</div>
                                </div>
                            </div>
                            `);
                        item.on("click", function() {
                            $("input[name='Title']").val(movie.title);
                            $("input[name='Year']").val(movie.year);
                            //$("input[name='Director']").val(movie.director);
                            $("textarea[name='Description']").val(movie.overview);
                            $("input[name='PosterUrl']").val(movie.poster);
                            results.hide();
                        });

                        results.append(item);
                    });

                    results.show();
                });
            });

            $(document).on("click",function(e) {
                if (!$(e.target).closest("#tmdb-search, #tmdb-results").length) {
                    $("#tmdb-results").hide();
                }
            });
        });
    </script>
}